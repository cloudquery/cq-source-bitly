    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Serve Plugin",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": ["serve"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest Debug",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}",
                "--pdb",
                "-s"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}